@model PatientManager.Application.Dtos.atencionmedica.CitasDto

@{
    ViewData["Title"] = "Crear Cita";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="fas fa-calendar-plus"></i> Crear Nueva Cita</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="PacienteID" class="form-label fw-bold">Paciente</label>
                    <select asp-for="PacienteID" asp-items="@ViewBag.Paciente" class="form-select">
                        <option value="">Seleccione un paciente</option>
                    </select>
                    <span asp-validation-for="PacienteID" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MedicoID" class="form-label fw-bold">Médico</label>
                    <select asp-for="MedicoID" asp-items="@ViewBag.Doctor" class="form-select">
                        <option value="">Seleccione un médico</option>
                    </select>
                    <span asp-validation-for="MedicoID" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Fecha" class="form-label fw-bold">Fecha</label>
                        <input asp-for="Fecha" type="date" class="form-control" />
                        <span asp-validation-for="Fecha" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Hora" class="form-label fw-bold">Hora</label>
                        <select asp-for="Hora" class="form-select">
                            <option value="">Seleccione una hora</option>
                            @for (int i = 8; i <= 17; i++)
                            {
                                    <option value="@i:00">@i:00</option>
                            }
                        </select>
                        <span asp-validation-for="Hora" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Causa" class="form-label fw-bold">Motivo de la Cita</label>
                    <textarea asp-for="Causa" class="form-control" rows="3" placeholder="Describa el motivo de la cita"></textarea>
                    <span asp-validation-for="Causa" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConsultorioID" class="form-label fw-bold">Consultorio</label>
                    <select asp-for="ConsultorioID" asp-items="@ViewBag.Consultorio" class="form-select">
                    </select>
                    <span asp-validation-for="ConsultorioID" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Volver</a>
                    <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Guardar Cita</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
