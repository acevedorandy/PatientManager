@using PatientManager.Persistance.Models.ViewModel.administracion.usuario
@model SaveUserViewModel
@using System.Security.Claims

@{
    ViewData["Title"] = "Crear Usuario";
}

<div class="container mt-4">
    <div class="card shadow-lg p-4 rounded">
        <h2 class="text-center text-primary mb-4">Crear Usuario</h2>
        <hr />
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Nombre" class="form-label fw-bold"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Apellido" class="form-label fw-bold"></label>
                        <input asp-for="Apellido" class="form-control" />
                        <span asp-validation-for="Apellido" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Correo" class="form-label fw-bold"></label>
                        <input asp-for="Correo" class="form-control" />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="NombreUsuario" class="form-label fw-bold"></label>
                        <input asp-for="NombreUsuario" class="form-control" />
                        <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Contraseña" class="form-label fw-bold"></label>
                        <input asp-for="Contraseña" type="password" class="form-control" />
                        <span asp-validation-for="Contraseña" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="ConfirmarContraseña" class="form-label fw-bold"></label>
                        <input asp-for="ConfirmarContraseña" type="password" class="form-control" />
                        <span asp-validation-for="ConfirmarContraseña" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="TipoUsuario" class="form-label fw-bold"></label>
                        <select asp-for="TipoUsuario" asp-items="@ViewBag.Rol" class="form-select"></select>
                        <span asp-validation-for="TipoUsuario" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="NombreConsultorio" class="form-label fw-bold"></label>
                        <select asp-for="NombreConsultorio" asp-items="@ViewBag.Consultorio" class="form-select"></select>
                        <span asp-validation-for="NombreConsultorio" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">Volver a la lista</a>
                        <button type="submit" class="btn btn-primary">Crear</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
