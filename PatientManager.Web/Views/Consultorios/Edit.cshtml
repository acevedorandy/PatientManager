@model PatientManager.Persistance.Models.administracion.ConsultoriosModel

@{
    ViewData["Title"] = "Editar Consultorio";
}

<div class="container mt-4">
    <h1 class="text-primary">✏️ Editar Consultorio</h1>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit" class="shadow-sm p-4 border rounded bg-light">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <input type="hidden" asp-for="ConsultorioID" />
                </div>

                <div class="mb-3">
                    <label asp-for="NombreConsultorio" class="form-label fw-bold"></label>
                    <input asp-for="NombreConsultorio" class="form-control" />
                    <span asp-validation-for="NombreConsultorio" class="text-danger"></span>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
