@model PatientManager.Persistance.Models.laboratorio.PruebasLaboratorioModel

@{
    ViewData["Title"] = "Editar Prueba";
}

<div class="container mt-4">
    <h1 class="text-primary">🧪 Editar Prueba de Laboratorio</h1>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm rounded p-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="PruebaID" />

                    <div class="mb-3">
                        <label asp-for="NombrePrueba" class="form-label fw-bold">Nombre de la Prueba</label>
                        <input asp-for="NombrePrueba" class="form-control" />
                        <span asp-validation-for="NombrePrueba" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Volver
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save"></i> Guardar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
