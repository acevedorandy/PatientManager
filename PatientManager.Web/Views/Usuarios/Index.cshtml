@model IEnumerable<PatientManager.Persistance.Models.administracion.UsuariosModel>

@{
    ViewData["Title"] = "Usuarios";
}

<div>
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="text-lg-start text-primary fw-bold my-4">👥 Lista de Usuarios</h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Agregar Nuevo Usuario
        </a>
    </div>

    <hr />

    @if (Model == null || !Model.Any())
    {
        <h2 class="text-center text-muted">No hay usuarios registrados</h2>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover shadow-sm">
                <thead class="table-primary">
                    <tr>
                        <th>#</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Correo</th>
                        <th>Usuario</th>
                        <th>Tipo</th>
                        <th>Consultorio</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.UsuarioID</td>
                            <td>@item.Nombre</td>
                            <td>@item.Apellido</td>
                            <td>@item.Correo</td>
                            <td>@item.NombreUsuario</td>
                            <td><span class="badge bg-info text-dark">@item.TipoUsuario</span></td>
                            <td>@item.ConsultorioID</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.UsuarioID" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.UsuarioID" class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash"></i> Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>