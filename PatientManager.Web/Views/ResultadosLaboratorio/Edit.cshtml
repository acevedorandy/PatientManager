@model PatientManager.Persistance.Models.laboratorio.ResultadosLaboratorioModel

@{
    ViewData["Title"] = "Editar Resultado";
}

<div class="container mt-4">
    <div class="card shadow-lg rounded">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="fas fa-vial"></i> Reportar Resultado</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>

                <div class="mb-3">
                    <input type="hidden" asp-for="ResultadoID" />

                </div>

                <input type="hidden" asp-for="PruebaID" />
                <input type="hidden" asp-for="EstadoID" />
                <input type="hidden" asp-for="PacienteID" />

                <div class="mb-3">
                    <label asp-for="Resultado" class="form-label fw-bold"><i class="fas fa-file-medical"></i> Resultado</label>
                    <textarea asp-for="Resultado" class="form-control" rows="3" placeholder="Ingrese el resultado aquí..."></textarea>
                    <span asp-validation-for="Resultado" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Volver</a>
                    <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
