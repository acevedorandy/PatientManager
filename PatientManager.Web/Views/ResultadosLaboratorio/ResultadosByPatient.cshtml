@model IEnumerable<PatientManager.Persistance.Models.ViewModel.laboratorio.ResultadosViewModelByPatient>

@{
    ViewData["Title"] = "Resultados del Paciente";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="text-primary">📋 Resultados del Paciente</h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Nuevo Registro
        </a>
    </div>

    <hr />

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning text-center" role="alert">
            <h4 class="mb-0">⚠ Este paciente aún no tiene pruebas registradas.</h4>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover table-bordered shadow-sm mt-3">
                <thead class="table-primary text-center">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.NombrePrueba)</th>
                        <th>@Html.DisplayNameFor(model => model.Estado)</th>
                        <th>@Html.DisplayNameFor(model => model.Resultados)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="align-middle text-center">
                            <td>@Html.DisplayFor(modelItem => item.NombrePrueba)</td>
                            <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                            <td>@Html.DisplayFor(modelItem => item.Resultados)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
